<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <EditText
        android:id="@+id/txt_nombrePersona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textStyle="italic"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="12dp"
        />
    <EditText
        android:id="@+id/txt_apellidoPersona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:textStyle="italic"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="12dp"
        />
    <EditText
        android:id="@+id/txt_correoPersona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:textStyle="italic"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingTop="12dp"
        />
    <EditText
        android:id="@+id/txt_passwordPersona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Clave"
        android:textStyle="italic"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingTop="12dp"
        />
    <RelativeLayout
        android:layout_width="300"
        android:layout_height="150"
        android:orientation="vertical"
        android:alpha=".50"
        android:background="@drawable/background">
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Personas"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <ListView
        android:id="@+id/lv_datosPersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</LinearLayout>